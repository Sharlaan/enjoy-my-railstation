{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "module": "CommonJS",
    "noImplicitAny": false,
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2020"
  },
  "include": ["src/**/*.ts"]
}
